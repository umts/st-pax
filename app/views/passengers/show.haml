%h1= @passenger.name
%p
  %b Address:
  = @passenger.address
%p
  %b Spire:
  = @passenger.spire
%p
  %b Email:
  = @passenger.email
%p
  %b Phone:
  = @passenger.phone
%p
  %b UMass Status:
  = @passenger.status
%p
  %b Registered with disability services?
  = checkmark_glyph @passenger.registered_with_disability_services?
%p
  %b Has brochure?
  = checkmark_glyph @passenger.has_brochure?
%p
  %b Mobility Device:
  = @passenger.mobility_device.try(:name) || 'None'
%p
  %b Active:
  = checkmark_glyph @passenger.active?
%p
  %b Permanent:
  = checkmark_glyph @passenger.permanent
- if @passenger.temporary?
  %p
    %b Has Doctor's Note?
    = checkmark_glyph @passenger.doctors_note.present?
  %p
    - if @passenger.doctors_note.present?
      %b Doctor's Note Expiration Date:
    - else
      %b Rides Expire:
    = @passenger.rides_expire.strftime('%m/%d/%Y')
%p
  %b Registering Dispatcher:
  = @passenger.registerer || 'Unknown'
%p
  %b Registration Date:
  = @passenger.registration_date
%p
  %b Other Notes:
  = @passenger.note
= link_to 'Edit', edit_passenger_path
= link_to 'Back', passengers_path
