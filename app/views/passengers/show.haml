%h1= @passenger.name
%p
  %b Address:
  =@passenger.address
%p
  %b Email:
  = @passenger.email
%p
  %b Phone:
  = @passenger.phone
%p
  %b Mobility Device:
  = @passenger.mobility_device.try(:device) || 'None'
%p
  %b Active:
  - if @passenger.active
    Yes
  - else
    No
%p
  %b Permanent:
  - if @passenger.permanent
    Yes
  - else
    No
%p
  %b Expiration Date:
  = @passenger.expiration_display

%p= @passenger.note
= link_to "Edit", edit_passenger_path
= link_to "Back", passengers_path
