%h1 Development login

= form_tag '/sessions/dev_login' do
  = submit_tag 'Log in as new passenger'
- [@admins, @dispatchers].each_with_index do |group, index|
  %h2 Login as #{%w[Admin Dispatcher][index]}:
  %ul
    - group.each do |user|
      = form_tag '/sessions/dev_login' do
        = hidden_field_tag :user_id, user.id
        = submit_tag user.name
%h2 Login as Passenger
%ul
  - @passengers.each do |passenger|
    = form_tag '/sessions/dev_login' do
      = hidden_field_tag :passenger_id, passenger.id
      = submit_tag passenger.name
