= form_for @user do |f|
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :spire
    = f.text_field :spire, placeholder: '12345678@umass.edu'
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :admin
    = f.check_box :admin
  .actions
    = f.submit 'Save'
