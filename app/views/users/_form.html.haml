- if @user.errors.any?
  #error_explanation
    %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message
= form_for @user do |f|
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :spire
    = f.text_field :spire, placeholder: '12345678@umass.edu'
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :admin
    = f.check_box :admin
  .actions
    = f.submit 'Save'
